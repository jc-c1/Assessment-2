<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Unit 2 Assessment</title>

  <!-- STYLESHEETS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/styles.css">
  
 

</head>
<body>
  <div class="container">

    <h1 class="text-center">To Do List</h1>

    <div class="row">

      <div class="col-md-8 col-md-offset-2">
        
        
        <%= message %>

       
        <ul><% todos.forEach(function(t) { %>
            <li><%= t.todo %>
                -
                <%- t.done ? 'done' : 'not done' %>
                <button type="button" name="button" class="deleteBtn btn btn-danger">Delete</button>
            </li>
        <% });%>
        </ul>
        



        <form class="form-inline" id="todoForm" action ="/addTodo" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="todo">
          </div>
          <button type="submit" class="btn btn-default">ADD TO DO</button>
        </form>

        



      </div>
    </div>
  </div>
</body>
</html>
